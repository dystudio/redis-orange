#!/bin/bash

REDIS_BROKER_IP="127.0.0.1";
<% if link('redis_broker_conn').p('bind') %>
REDIS_BROKER_IP="<%= spec.ip %>";
<% end %>
REDIS_BROKER_PORT="<%= link('redis_broker_conn').p('port') %>";

ERR_CATALOG=1;
if [[ "$(curl -s -o /dev/null -I -w "%{http_code}" \
  http://${REDIS_BROKER_IP}:${REDIS_BROKER_PORT}/v2/catalog)" == "200" ]];
then
  ERR_CATALOG=0;
  echo "Catalog: OK";
else
  echo "Catalog: KO";
fi

ERR_BINDING=1;
if [[ "$(curl -s -o /dev/null -I -w "%{http_code}" \
  http://${REDIS_BROKER_IP}:${REDIS_BROKER_PORT}/v2/service_instances/redis)" == "200" ]];
then
  ERR_BINDING=0;
  echo "Binding: OK";
else
  echo "Binding: KO";
fi

ERR=1;
if [[ ${ERR_CATALOG} -eq 0 ]] && [[ ${ERR_BINDING} -eq 0 ]];
then
  ERR=0;
fi

exit ${ERR};