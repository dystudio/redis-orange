<%
  master=link('redis_conn')
  instances=master.instances
  sentinel=nil
  if_link('redis_sentinel_conn') do |x|
    sentinel=x
    instances=x.instances
  end
%>
server:
  <%= p('port') %>
orange:
  redis:
    servers:
<% instances.each do |x| %>
      - <%= x.address %>
<% end %>
    port:
      <%= master.p('port') %>
<%
  master.if_p('password') do |password|
    unless password.to_s.empty? %>
    password:
      <%= password %>
<%  end
  end %>
<% if !sentinel.nil? %>
    sentinel:
      port:
        <%= sentinel.port %>
<%
    sentinel.if_p('password') do |password|
      unless password.to_s.empty? %>
      password:
        <%= password %>
<%    end
    end
%>
      masterName:
        <%= spec.deployment %>
<% end %>
